<ToolboxLayout>
    
    GridLayout:
        cols: 1
        size: root.width, root.height
        
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 10
        
            Image:
                source: 'header.png'
                size: self.texture_size 
                        
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 10
            
            Button:
                text: "Start Experiment"
                font_size: 35
                
            Button:
                text: "Experimental Protocol"
                font_size: 35
                
            Button:
                text: "Check Progress"
                font_size: 35
                
            Button:
                text: "Subject IDs"
                font_size: 35

        
        BoxLayout:
            orientation: "horizontal"
            
            Button:
                markup: True
                text: "[b]RPi4Toolbox[/b] (C) 2021 GuillermoHidalgoGadea.com"
                on_press: root.homepage()
                pos_hint: {"center_x": 0.5}
                size_hint: (1,0.2)
                
        
         
